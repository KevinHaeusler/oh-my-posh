{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "root",
            "style": "plain",
            "powerline_symbol": "\ue0b0",
            "foreground": "#3b78ff",
            "template": "\uf0e7 ",
            "properties": {
              "root_icon": "\uf0e7"
            }
          },
          {
            "type": "session",
            "style": "plain",
            "foreground": "#3a96dd",
            "template": "{{ if .SSHSession }}î®© {{ end }}{{ .UserName }}@{{ .HostName }}"
          },
          {
            "type": "path",
            "style": "plain",
            "foreground": "#ae81ff",
            "template": " \u276f {{ .Path }}",
            "properties": {
              "folder_icon": "~",
              "folder_separator_icon": "/",
              "home_icon": "~",
              "style": "agnoster_full"
            }
          },
          {
            "type": "git",
            "style": "plain",
            "foreground": "#d6bb24",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}red{{ end }}",
              "{{ if gt .Ahead 0 }}green{{ end }}",
              "{{ if gt .Behind 0 }}red{{ end }}"
            ],
            "template": " \u276f {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 <#c50f1f>{{ .Working.String }}</>{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 <yellow>{{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0}} \uf692 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }}",
            "properties": {
              "fetch_stash_count": true,
              "fetch_status": true,
              "fetch_upstream_icon": true,
              "branch_icon": "\ue0a0"
            }
          },
          {
            "type": "terraform",
            "style": "plain",
            "foreground": "#ea5a21",
            "template": " \u276f \udb84\udc62 {{.WorkspaceName}}"
          },
          {
            "type": "python",
            "style": "plain",
            "foreground": "#13a10b",
            "template": " \u276f \udb83\udc18 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
            "properties": {
              "display_mode": "files",
              "fetch_version": true,
              "home_enabled": true
            }
          }
        ],
        "newline": false
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "shell",
            "style": "plain",
            "foreground": "#61d6d6",
            "template": "{{.Name }} ",
            "properties": {
              "mapped_shell_names": {
                "pwsh": "\ue683",
                "bash": "\udb84\udd83"
              }
            }
          },
          {
            "type": "time",
            "style": "plain",
            "foreground": "#61d6d6",
            "template": "{{ .CurrentDate | date .Format }} ",
            "properties": {
              "time_format": "15:04:05"
            }
          },
          {
            "type": "text",
            "style": "plain",
            "foreground": "#f92672",
            "template": "\u276f"
          }
        ],
        "newline": true
      }
    ]
  }
  